# ===========================================
# ESOrbit - Variáveis de Ambiente
# ===========================================

# ------------------------------------------
# Banco de Dados
# ------------------------------------------
DATABASE_URL=postgresql://user:password@localhost:5432/esorbit?schema=public

# ------------------------------------------
# Configuração da API
# ------------------------------------------
PORT=4000
API_PREFIX=api

# ------------------------------------------
# Autenticação e Segurança
# ------------------------------------------
JWT_ACCESS_SECRET=your-super-secret-access-key-change-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production

# ------------------------------------------
# CORS
# ------------------------------------------
FRONTEND_URL=http://localhost:3000

# ------------------------------------------
# APIs Externas
# ------------------------------------------
# Configuração da API do Fortnite
FORTNITE_API_BASE=https://fortnite-api.com/v2
TIMEOUT_MS=10000
RETRY_ATTEMPTS=3
RETRY_BACKOFF_MS=1000
RATE_LIMIT_RPS=5

# ------------------------------------------
# Catalog Sync
# ------------------------------------------
SYNC_ON_BOOTSTRAP=false
